@{
  Layout = "_Layout";
}

@using BugTracker.Models;
@model List<BugTracker.Models.Issue>;

<h1>Issues</h1>

@if (@Model.Count == 0)
{
  <h3>No issues have been added yet!</h3>
} 

@foreach (Issue issue in Model)
{
  <li>@Html.ActionLink($"{issue.Description}", "Details", new { id = issue.IssueId })</li>
}

<p>@Html.ActionLink("Add new Issue", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>